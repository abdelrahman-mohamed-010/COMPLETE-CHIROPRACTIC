---
import Sidebar from "../../components/Sidebar.tsx";
import PrimaryLayout from "../../layouts/PrimaryLayout.astro";

const baseUrl = import.meta.env.STRAPI_URL;
const token = import.meta.env.ASTRO_APP_API_TOKEN;

const response = await fetch(`${baseUrl}/api/posts?populate=*`, {
  headers: {
    'Authorization': `Bearer ${token}`
  }
});

const { data } = await response.json();

const blogPosts = data.map((post: any) => ({
  title: post.Title,
  image: post.FeaturedImg ? `${baseUrl}${post.FeaturedImg.url}` : '/default-image.jpg',
  excerpt: post.Content[0]?.children?.[0]?.text || 'No excerpt available',
  slug: post.Slug
}));
---

<PrimaryLayout>
  <main class="max-w-[1360px] mx-auto xl:px-8 px-4 py-8 md:py-12">
    <h1 class="text-2xl md:text-7xl w-full text-center font-bold mb-1">YOUR CHIROPRACTORS <span class="text-primary">BLOG</span> </h1>
     <h2 class="w-full text-center text-1xl md:text-4xl font-medium mb-8 md:mb-12">Welcome</h2>
    <div class="flex flex-col md:flex-row gap-8">
      <div class="w-full md:w-3/4">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-8">
          {blogPosts.map((post: { title: string; image: string; excerpt: string; slug: string }) => (
            <div class="border rounded-lg overflow-hidden shadow-sm">
              <img src={post.image} alt={post.title} class="w-full h-40 md:h-48 object-cover"/>
              <div class="p-3 md:p-4">
                <h2 class="text-lg md:text-xl font-bold mb-2">{post.title}</h2>
                <p class="text-gray-600 text-sm md:text-base mb-3 md:mb-4">{post.excerpt}</p>
                <a href={`/blog/${post.slug}`} class="text-primary hover:underline">Read More â†’</a>
              </div>
            </div>
          ))}
        </div>
      </div>
      <Sidebar client:only="react" />
    </div>
  </main>
</PrimaryLayout>